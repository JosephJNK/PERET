@import functions

content-width = 1000px

.center-block
  position relative
  width content-width
  margin 0 auto

#header
  @extend .center-block
  border-top none
  text-align center
  margin-bottom 2em
  .content
    font-size 3em
    font-weight bolder
    padding .25em 10%

.center
  @extend .center-block
  min-height 50%

#problem-input
#problem-display
#steps
#results
  vertical-align top
  display inline-block
  width 49%
  height 50%

  & > .title
    width 100%
    font-size 2em
    line-height 1.3em
    border-bottom solid black 1px

#steps
  .input
    .btn
      vertical-align top
      margin-left .5px
